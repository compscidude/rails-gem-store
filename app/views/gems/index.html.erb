


<div class="col-sm-6 col-sm-offset-3">

    <div class="row text-center">
        <div class="col-sm-4">
            <%= link_to 'Home', root_path, class: 'btn btn-default top-15' %>
        </div>
        <div class="col-sm-4">
                 <h2> Gem Store </h2>
        </div>
        <div class="col-sm-4">
            <%= link_to 'History', history_path, class: 'btn btn-default top-15' %>
        </div>
    </div>

    <div class="row text-center">
        <h1> <%= current_user.gem %> </h1>
        <small> Gems in Possession</small> 
    </div>
    
    <hr>

    <ul class="gem-table"> 
        <% items.purchasable.each do |item| %>
            <li> <%= item.gem %> <small> Gems </small>
            <%= link_to number_to_currency(item.price), transaction_path(:item => item), class: 'btn btn-default float-right' %>
        <% end %>
    </ul> 

</div>


